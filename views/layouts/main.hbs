<body onload="startup()">
    <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <div class="topbar">
        {{>topbar}}
    </div>
    <div id="logo" class="logo" onclick="toggleMenu()">
        <img src="/imgs/logo.png" />
    </div>
    <div id="sidebar" class='sidebar'>
        {{>menu}}
    </div>
    <div class='main' id='main'>
        {{{ body }}}
    </div>
</body>
<script>
    function toggleMenu() {
        let logo = document.getElementById("logo");
        if (hasClass(logo, 'openmenu')) {
            document.getElementById("sidebar").classList.remove("openmenu");
            logo.classList.remove("openmenu");
        } else {
            document.getElementById("sidebar").classList.add("openmenu");
            logo.classList.add("openmenu");
        }
    }
    function hasClass(element, className) {
        return (' ' + element.className + ' ').indexOf(' ' + className + ' ') > -1;
    }
</script>

</html>